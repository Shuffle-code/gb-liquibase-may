<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd
    http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.6.xsd ">

    <changeSet id="before_create_player_user_table" author="shuffle">
        <tagDatabase tag="before_create_player_user_table"/>
    </changeSet>

    <changeSet id="create_player_user_table" author="shuffle">
        <createTable tableName="PLAYER_USER">
            <column name="PLAYER_ID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="USER_ID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="PLAYER_USER" columnNames="PLAYER_ID, USER_ID"/>
        <addForeignKeyConstraint baseTableName="PLAYER_USER" baseColumnNames="PLAYER_ID" constraintName="FK_PLAYER_USER_PLAYER"
                                 referencedTableName="PLAYER" referencedColumnNames="ID"/>
        <addForeignKeyConstraint baseTableName="PLAYER_USER" baseColumnNames="USER_ID" constraintName="FK_PLAYER_USER_ACCOUNT_USER"
                                 referencedTableName="ACCOUNT_USER" referencedColumnNames="ID"/>
    </changeSet>


</databaseChangeLog>
