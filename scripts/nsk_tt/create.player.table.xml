<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd
    http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.6.xsd ">

    <changeSet id="before_create_player_table" author="shuffle">
        <tagDatabase tag="before_create_player_table"/>
    </changeSet>

    <changeSet id="create_player_table" author="shuffle">
        <createTable tableName="PLAYER">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="firstname" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="patronymic" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="lastname" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="rating" type="DECIMAL(10, 2))" defaultValue="500"/>
            <column name="rating_ttw" type="DECIMAL(10, 2))">
                <constraints nullable="true" unique="false"/>
            </column>
            <column name="year_of_birth" type="INTEGER">
                <constraints nullable="true"/>
            </column>
            <column name="VERSION" type="INT" defaultValue="0"/>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="TIMESTAMP"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="TIMESTAMP"/>
            <column name="STATUS" type="VARCHAR(30)" defaultValue="ACTIVE">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>